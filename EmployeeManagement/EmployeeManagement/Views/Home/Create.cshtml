@model Employee

@{
    ViewBag.Title = "Create Employee";

}

<form asp-controller="Home" asp-action="Create" method="post" >
    <div class="row g-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Department" class="form-label">Department</label>
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-select">
            </select>
        </div>

        <div class="d-grid d-md-block">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>

    </div>
</form>
