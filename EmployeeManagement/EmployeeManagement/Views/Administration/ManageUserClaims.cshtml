@model UserClaimsViewModel
@{
    ViewData["Title"] = "ManageUserClaims";
}

<h1>ManageUserClaims</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage user class</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.Claims[i].ClaimType" type="hidden" />

                    <input asp-for="@Model.Claims[i].isSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].isSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-controller="@Model.UserId" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

