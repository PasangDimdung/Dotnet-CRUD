@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "ListUsers";
}

<h1>All users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="register" asp-controller="account">
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="administration" asp-action="edituser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="administration" asp-action="deleteroles" class="btn btn-danger">Delete</a>
            </div>

        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <a class="btn btn-primary" asp-controller="account" asp-action="createuser">Create user</a>
        </div>

    </div>
}

